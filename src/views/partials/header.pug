header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li
                a(href="/search" title="search")
                    i.fas.fa-search
            if loggedIn 
                li
                    a(href="/videos/upload" title="upload")
                        i.fas.fa-upload
                li 
                    a(href="/users/edit" title="edit-profile")
                        i.fas.fa-user-edit
                li  
                    a(href="/users/logout" title="log out")
                        i.fas.fa-sign-out-alt
                li 
                    a(href=`/users/${loggedInUser._id}`) 
                        if loggedInUser.avatarUrl === ""
                            span (smile)
                        else 
                            img.header__avatar(src="/" + loggedInUser.avatarUrl)
            else
                li
                    a(href="/login") Login
                li 
                    a(href="/join").header__btn Join