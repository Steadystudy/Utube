extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST", actions="/videos/upload", enctype= "multipart/form-data")
        label(for="video") Video
        input(type="file", name="video", required, id="video", accept="video/*")
        input(placeholder="Title", required, type="text", name="title", maxlength= 40,
    minlength= 2,)
        input(placeholder="Description", required, type="text", name="description", minlength= 1,
    maxlength= 40,)
        input(placeholder="Hashtags, separated by comma", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")